<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/menuBox"
        android:layout_gravity="center"
        android:background="@color/primaryDark"
        android:padding="16dp"
        android:layout_width="200dp"
        android:layout_height="136dp">

        <RelativeLayout
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.oursaviorgames.android.ui.widget.RoboTextView
                android:id="@+id/text_menu"
                android:text="@string/menu"
                android:textSize="16dp"
                android:textColor="@color/white"
                app:fontStyle="ocr_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                />

            <ImageView
                android:id="@+id/favoriteButton"
                style="@style/gameMenuButtonStyle"
                android:src="@drawable/favorite_button_selector"
                android:layout_marginTop="54dp"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/backButton"
                style="@style/gameMenuButtonStyle"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:paddingRight="2dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/favoriteButton"
                android:layout_alignTop="@id/favoriteButton"
                />

            <ImageView
                android:id="@+id/resumeButton"
                style="@style/gameMenuButtonStyle"
                android:src="@drawable/ic_continue_white_24dp"
                android:paddingLeft="2dp"
                android:layout_marginLeft="8dp"
                android:layout_alignTop="@id/favoriteButton"
                android:layout_toRightOf="@id/favoriteButton"
                />

        </RelativeLayout>

    </FrameLayout>


</FrameLayout>
