<com.oursaviorgames.android.ui.widget.SmartRatioRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oursaviorgames.android.ui.HelloFragment">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/ic_moonrise_144dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.oursaviorgames.android.ui.widget.DiamondView
        android:id="@+id/app_name_container"
        app:backgroundAlpha="0.24"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        >
        <com.oursaviorgames.android.ui.widget.RoboTextView
            android:text="@string/our_savior_games"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:fontStyle="ocr_b"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </com.oursaviorgames.android.ui.widget.DiamondView>

    <com.oursaviorgames.android.ui.widget.DiamondView
        android:id="@+id/diamond"
        app:backgroundAlpha="0.13"
        android:layout_width="208dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/gridSize"
        android:layout_below="@id/app_name_container"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        />

    <com.oursaviorgames.android.ui.widget.DiamondView
        app:backgroundAlpha="0.07"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/gridSize"
        android:layout_below="@id/diamond"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_marginTop="176dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/gplusButton"
            android:background="@null"
            android:src="@drawable/gplus_button"
            android:scaleType="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:id="@+id/facebookButton"
            android:background="@null"
            android:src="@drawable/facebook_button"
            android:scaleType="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/gplusButton"
            android:layout_marginStart="12dp"
            />
 </LinearLayout>

     <com.oursaviorgames.android.ui.widget.RoboTextView
        android:text="@string/signIn"
        android:textAllCaps="true"
        android:textSize="@dimen/stdTextSize"
        app:fontStyle="medium"
        android:textColor="@color/paleWhite"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/loginContainer"
        android:layout_above="@id/loginContainer"
        android:layout_toStartOf="@id/loginContainer"
        android:layout_marginEnd="@dimen/gridSize"
        android:layout_marginBottom="48dp"
        />

</com.oursaviorgames.android.ui.widget.SmartRatioRelativeLayout>
